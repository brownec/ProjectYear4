        </td>

        <td>
            <div class="btn-group">
                <a class="btn btn-info" href="#">Select</a>
                <a class="btn btn-info dropdown-toggle" aria-expanded="false" href="#" data-toggle="dropdown"><span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Add Income", "Create", new { id = item.IncomeId })</li>
                    <li>@Html.ActionLink("Edit Income", "Edit", new { id = item.IncomeId })</li>
                    <li>@Html.ActionLink("Income Details", "Details", new { id = item.IncomeId })</li>
                    <li>@Html.ActionLink("Delete Income", "Delete", new { id = item.IncomeId })</li>
                </ul>
            </div>
        </td>
