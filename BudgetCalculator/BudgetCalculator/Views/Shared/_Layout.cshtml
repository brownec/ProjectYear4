<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Monthly Budget Calculator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">*@
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Budget Calculator", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            @*<div class="navbar-collapse collapse">*@
            <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-2">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li>@Html.ActionLink("Users", "Index", "BudgetUsers")</li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false"
                           href="#" data-toggle="dropdown">My Budgets<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("View Budgets", "Index", "Budgets")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false"
                           href="#" data-toggle="dropdown">Income<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Add Income", "Index", "Incomes")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false"
                           href="#" data-toggle="dropdown">Expenses<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Car", "Index", "CarExpenses")</li>
                            <li>@Html.ActionLink("Household", "Index", "HouseholdExpenses")</li>
                            <li>@Html.ActionLink("Personal", "Index", "PersonalExpenses")</li>
                            <li>@Html.ActionLink("Travel", "Index", "TravelExpenses")</li>
                            <li>@Html.ActionLink("Utility Bills", "Index", "UtilityBillExpenses")</li>
                        </ul>
                    </li>
                    
                    @*<li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false"
                           href="#" data-toggle="dropdown">Analysis<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Budget Summary", "Summary", "Budgets")</li>
                            <li>@Html.ActionLink("Budget Forecast", "Forecast", "Budgets")</li>
                        </ul>
                    </li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year | Monthly Budget Calculator | Cliff Browne | @Html.ActionLink("Contact", "Contact", "Home")</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Highcharts-4.0.1/js/highcharts-all.js"></script>
</body>
</html>