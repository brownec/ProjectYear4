@model BudgetCalculator.Models.Budget
@{
  ViewBag.Title = "Summary";
}
<p>
    <br />
    <a class="btn btn-primary btn-xs" @Html.ActionLink("Home", "Index", "Home")</a>
    <a class="btn btn-primary btn-xs" @Html.ActionLink("My Budgets", "Index", "Budgets")</a>
</p>
<h3>Budget Summary Table</h3>
<h6>* Click (+) for breakdown of Income and Expenditure</h6>

<table class="table table-responsive table-hover">
    <thead>
        <tr class="info">
            <th>Details</th>
            <th>Debit</th>
            <th>Credit</th>
        </tr>
    </thead>
    <tbody>
        <!-- INCOME -->
        <tr class="clickable" data-toggle="collapse" id="income" data-target=".income">
            <td><i class="glyphicon glyphicon-plus" > Income</i></td>
            <td></td>
            <td></td>
        </tr>
        <tr class="collapse income">
            <td>Primary Income</td>
            <td>@ViewBag.PrimaryIncomeAmount</td>
            <td>0.00</td>
        </tr>
        <tr class="collapse income">
            <td>Additional Income</td>
            <td>@ViewBag.AdditionalIncomeAmount</td>
            <td>0.00</td>
        </tr>
        <tr class="warning">
            <th>Income Total</th>
            <th>@ViewBag.TotalIncome</th>
            <th>0.00</th>
        </tr>
    
        <!-- CAR EXPENDITURE -->
        <tr class="clickable" data-toggle="collapse" id="carExpenses" data-target=".carExpenses">
            <td><i class="glyphicon glyphicon-plus" > Car Expenditure</i></td>
            <td></td>
            <td></td>
        </tr>
        <tr class="collapse carExpenses">
            <td>Car Tax</td>
            <td>0.00</td>
            <td>@ViewBag.CarTax</td>
        </tr>
        <tr class="collapse carExpenses">
            <td>Car Insurance</td>
            <td>0.00</td>
            <td>@ViewBag.CarInsurance</td>
        </tr>
        <tr class="collapse carExpenses">
            <td>Car Maintenance</td>
