            <td>@ViewBag.Maintenance</td>
        </tr>
        <tr class="collapse carExpenses">
            <td>Fuel</td>
            <td>0.00</td>
            <td>@ViewBag.FuelAmount</td>
        </tr>
        <tr class="collapse carExpenses">
            <td>NCT</td>
            <td>0.00</td>
            <td>@ViewBag.NctAmount</td>
        </tr>
        <tr class="collapse carExpenses">
            <td>Toll Charges</td>
            <td>0.00</td>
            <td>@ViewBag.TollChargeAmount</td>
        </tr>
        <tr class="collapse carExpenses">
