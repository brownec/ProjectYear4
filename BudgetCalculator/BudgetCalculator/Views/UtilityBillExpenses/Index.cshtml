                <a class="btn btn-info dropdown-toggle" aria-expanded="false" href="#" data-toggle="dropdown"><span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Edit Expenditure", "Edit", new { id = item.UtilityBillExpenseId })</li>
                    <li>@Html.ActionLink("Expenditure Details", "Details", new { id = item.UtilityBillExpenseId })</li>
                    <li>@Html.ActionLink("Delete Expenditure", "Delete", new { id = item.UtilityBillExpenseId })</li>
